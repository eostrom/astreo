---
import BaseLayout from '../layouts/BaseLayout.astro'
import ArtsContents from '../components/ArtsContents.vue'
import CodeContents from '../components/CodeContents.vue'
---

<BaseLayout>
  <div class="braingrid">
    <div class="brand">
      <span class="display arts">Erik&nbsp;</span><span class="display code"
        >Ostrom</span
      >
    </div>
    <div class="main code display-only">
      <h1>code</h1>
      <p>
        I'm a freelance web developer, architect, and designer. I love to create
        robust, modern, humane software experiences.
      </p>
      <CodeContents />
    </div>
    <div class="main arts display-only">
      <h1>arts</h1>
      <p>
        I'm a composer, improviser, singer, player, and theater maker. I love to
        create playful, moving, immersive artistic experiences.
      </p>
      <ArtsContents />
    </div>
    <div class="footer">Â© 2019, 2024 Erik Ostrom</div>
  </div>
</BaseLayout>

<style>
  h1::before,
  h1::after {
    content: '';
  }

  .braingrid {
    grid-template-areas:
      'header header header header'
      'code code arts arts'
      'code code arts arts'
      'footer footer footer footer';
  }

  .brand {
    grid-area: header;
  }

  .main.code {
    grid-area: code;
    text-align: right;
    padding-left: 25%;
  }

  .main.arts {
    grid-area: arts;
    padding-right: 25%;
  }

  .footer {
    text-align: center;
  }

  @media (max-width: 480px) {
    .braingrid {
      grid-template-areas:
        'header header header header'
        'code code code code'
        'arts arts arts arts'
        'footer footer footer footer';
    }

    .main.code {
      padding-left: 12.5%;
    }

    .main.arts {
      padding-right: 12.5%;
    }
  }
</style>
